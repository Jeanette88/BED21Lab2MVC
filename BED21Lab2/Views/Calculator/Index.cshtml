@model BED21Lab2.Models.CalculatorModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="form-group">
<h3>Result: @ViewBag.result</h3>
</div>

<h4>CalculatorModel</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValueA" class="control-label"></label>
                <input asp-for="ValueA" class="form-control" />
                <span asp-validation-for="ValueA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueB" class="control-label"></label>
                <input asp-for="ValueB" class="form-control" />
                <span asp-validation-for="ValueB" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <input type="submit" value="Create" class="btn btn-primary" />*@
                <input type="submit" name="myButton" value="Add" class="btn btn-primary" />
                <input type="submit" name="myButton" value="Subtract" class="btn btn-primary" />
                <input type="submit" name="myButton" value="Multiply" class="btn btn-primary" />
                <input type="submit" name="myButton" value="Divide" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
